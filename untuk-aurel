<!-- MUSIK -->
<audio id="musik" loop>
  <source src="diego-gonzalez-thankyou-for-everything.mp3" type="audio/mpeg">
</audio>

<script>
// tombol mulai
function mulai(){
  document.getElementById("start").style.display="none";
  document.getElementById("musik").play();
  ketik();
}

// efek ngetik
const teks="Untuk Aurel ü§ç";
let i=0;
function ketik(){
  if(i<teks.length){
    document.getElementById("typing").innerHTML+=teks.charAt(i);
    i++;
    setTimeout(ketik,120);
  }
}

// hati jatuh
setInterval(()=>{
  const h=document.createElement("div");
  h.className="heart";
  h.innerHTML="ü§ç";
  h.style.left=Math.random()*100+"vw";
  h.style.animationDuration=(3+Math.random()*5)+"s";
  document.body.appendChild(h);
  setTimeout(()=>h.remove(),8000);
},350);
</script>

